<!DOCTYPE html>
<html>
<head>
</head>
    <body>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard" aria-hidden="true"></i> | Dashboard</li>
        </ol>
        <section class="content">
            <div class="row">
                @if (ViewBag.UserRole != "Collateral Officer" && ViewBag.UserRole != "Sr. Finance Officer" && ViewBag.UserRole != "Accounts Payable" && ViewBag.UserRole != "Accounts Receivable")
                {
                <!-- left column -->
                    <div class="col-md-6">
                        <!--.box 1-->
                        <div class="box box-danger">
                            <div class="box-header with-border">
                                <b>Pending Approval</b>
                            </div>
                            <div class="box-body">
                                <div id="1"></div>
                            </div>
                        </div>
                        <!--/.box 1-->
                        <!--.box 2-->
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <b>Awaiting Payment Advice</b> 
                            </div>
                            <div class="box-body">
                                <div id="2"></div>
                            </div>
                        </div>
                        <!--/.box 2-->
                    </div>
                <!--/left column -->


                <!--right column-->
                <div class="col-md-6">
                    <!--.box 3-->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <b>Awaiting Payment</b>
                        </div>
                        <div class="box-body">
                            <div id="3"></div>
                        </div>
                    </div>
                    <!--/.box 3-->

                    <!--.box 4-->
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <b>Awaiting Collateral</b>
                        </div>
                        <div class="box-body">
                            <div id="4"></div>
                        </div>
                    </div>
                    <!--/.box 4-->
                </div>
                <!--/right column-->
                }
            </div>
            @if (ViewBag.UserRole == "Collateral Officer" || ViewBag.UserRole == "Sr. Finance Officer" || ViewBag.UserRole == "Accounts Payable" || ViewBag.UserRole == "Accounts Receivable")
            {
                if (ViewBag.UserRole != "Collateral Officer")
                {
                 <!--.box 5-->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <b>Awaiting Payment</b>
                        </div>
                        <div class="box-body">
                            <div id="5"></div>
                        </div>
                    </div>
                <!--/.box 5-->
                }
                <!--.box 6-->
                <div class="box box-success">
                    <div class="box-header with-border">
                        <b>Awaiting Collateral</b>
                    </div>
                    <div class="box-body">
                        <div id="6"></div>
                    </div>
                </div>
                <!--/.box 6-->
            }
            <!-- /.row -->
        </section>
        <!-- Button trigger modal -->
        <div class="modal fade" id="serverAlertModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div style="width:800px; margin:0 auto;" aria-hidden="true" class="alert alert-dismissable alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h4><i class="glyphicon glyphicon-remove"></i>Oops! Something went wrong.</h4>

                    <p>Check your internet connection. If the problem continues to persist please contact support.</p>
                </div>
            </div>
        </div>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script type="text/javascript">
                //alert("Inside jQuery Func!");
            $.ajaxPrefilter(function (options, original_Options, jqXHR) {
                options.async = true;
            });
            var role = '@(ViewBag.UserRole)';
            if (role != "Collateral Officer" && role != "Sr. Finance Officer" && role != "Accounts Payable" && role != "Accounts Receivable")
            {
                $('#1').load('@Url.Action("LoadApprovalPanel", "MemberFiles")');
                $('#2').load('@Url.Action("LoadInputPanel", "MemberFiles")');
                $('#3').load('@Url.Action("LoadPaymentPanel", "MemberFiles")');
                $('#4').load('@Url.Action("LoadCollateralPanel", "MemberFiles")');
            }
            if (role == "Sr. Finance Officer" || role == "Accounts Payable" || role == "Accounts Receivable") {
                $('#5').load('@Url.Action("LoadPaymentPanel", "MemberFiles")');
                $('#6').load('@Url.Action("LoadCollateralPanel", "MemberFiles")');
            }
            if (role == "Collateral Officer")
            {
                $('#6').load('@Url.Action("LoadCollateralPanel", "MemberFiles")');
            }


        </script>
    </body>
</html>
