<!DOCTYPE html>
<html>
<head>
</head>
    <body>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard" aria-hidden="true"></i> | Dashboard</li>
        </ol>
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!--.box 1-->
                    <div class="box box-danger">
                        <div class="box-header with-border">
                            <b>Pending Approval</b>
                        </div>
                        <div class="box-body">
                            <div id="1"></div>
                        </div>
                    </div>
                    <!--/.box 1-->

                    <!--.box 2-->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <b>Awaiting Input</b>
                        </div>
                        <div class="box-body">
                            <div id="2"></div>
                        </div>
                    </div>
                    <!--/.box 2-->
                </div>
                <!--/left column -->

                <!--right column-->
                <div class="col-md-6">
                    <!--.box 3-->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <b>Awaiting Payment</b>
                        </div>
                        <div class="box-body">
                            <div id="3"></div>
                        </div>
                    </div>
                    <!--/.box 3-->

                    <!--.box 4-->
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <b>Awaiting Collateral</b>
                        </div>
                        <div class="box-body">
                            <div id="4"></div>
                        </div>
                    </div>
                    <!--/.box 4-->
                </div>
                <!--/right column-->
            </div>
            <!-- /.row -->
        </section>

        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript">
            $(function ()
            {
                //alert("Inside jQuery Func!");

                $.ajaxPrefilter(function (options, original_Options, jqXHR) {
                    options.async = true;
                });

                $('#1').load('@Url.Action("LoadApprovalPanel", "MemberFiles")');
                $('#2').load('@Url.Action("LoadInputPanel", "MemberFiles")');
                $('#3').load('@Url.Action("LoadPaymentPanel", "MemberFiles")');
                $('#4').load('@Url.Action("LoadCollateralPanel", "MemberFiles")');
            });
        </script>
    </body>
</html>

