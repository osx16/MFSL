@model PagedList.IPagedList<MFSL.Models.MemberFile>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
</head>
    <body>
        <script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>
        @*<script src="~/Scripts/jquery-3.1.1.js" async="async"></script>
        <script src="~/Scripts/jquery-3.1.1.min.js" async="async"></script>*@
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript">
            $(function ()
            {
                //alert("jQuery Executed");
                $.ajaxPrefilter(function (options, original_Options, jqXHR) {
                    options.async = true;
                });

                $('#filepartialview').load('@Url.Action("RenderInfoView", "MemberFiles")');
                $('#search').unbind().click(function (e) {
                    e.preventDefault();
                    //$('#filepartialview').remove();
                    $("#filepartialview").load('@(Url.Action("SearchFiles", "MemberFiles",null, Request.Url.Scheme))?memberNo=' + $('#txtbox').val());
                });

            });
        </script>
        <ol class="breadcrumb">
            @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">UI</a></li>*@
            <li class="active"><i class="glyphicon glyphicon-home"></i> | Home</li>
        </ol>

        <section class="content">
            <div class="row">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td align="right">
                                        <input type="number" min="1" id="txtbox" class="form-control" placeholder="Enter Member #" />
                                    </td>
                                    <td align="left">
                                        <button id="search" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> Search</button>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <div id="filepartialview"></div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>

