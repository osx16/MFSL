@model PagedList.IPagedList<MFSL.Models.MemberFile>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
</head>
    <body>
        <ol class="breadcrumb">
            <li class="active"><i class="glyphicon glyphicon-time"></i> | History</li>
        </ol>

        <section class="content">
            <div class="row">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td align="right">
                                        <input type="number" min="1" id="txtbox" class="form-control" placeholder="Enter Member #" />
                                    </td>
                                    <td align="left">
                                        <input type="submit" id="search" value="search" class="btn btn-success" disabled="disabled" />
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <div id="filepartialview"></div>
                    </div>
                </div>
            </div>
        </section>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script type="text/javascript">
            $('#filepartialview').load('@Url.Action("MyFiles", "MemberFiles")');
            $('#search').unbind().click(function (e) {
                e.preventDefault();
                //$('#filepartialview').remove();
                $("#filepartialview").load('@(Url.Action("MyFiles", "MemberFiles",null, Request.Url.Scheme))?memberNo=' + $('#txtbox').val());
            });

            document.getElementById("txtbox").onkeyup = function () {
                if ($(this).val() == 0) {
                    $('.btn').prop('disabled', true);
                } else {
                    $('.btn').prop('disabled', false);
                }
            }
        </script>
    </body>
</html>


