@model PagedList.IPagedList<MFSL.Models.FileReferences>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <!-- Button trigger modal -->
    <div class="modal fade" id="memberDetailsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-user-circle fa-lg" aria-hidden="true"></i> | Member Info</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- File modal -->
    <div class="modal fade" id="memberFilesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-files-o fa-lg" aria-hidden="true"></i> | Docs</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update File modal -->
    <div class="modal fade" id="updateFileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-fw fa-arrow-circle-o-up fa-lg"></i> | Update file</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="row">
            @*<div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <td align="right">
                                <input type="number" min="1" id="@("t"+ViewBag.PanelId)" class="form-control" placeholder="Enter Member #" />
                            </td>
                            <td align="left">
                                <input type="submit" id="search" value="search" class="btn btn-success" disabled="disabled" />
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>*@ 
            <div class="col-md-4">
                <h4 class="box-title">Total: @ViewBag.TotalFiles <i class="fa fa-fw fa-folder"></i></h4>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr class="success">
                        @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                        {
                            if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                            {
                                <th>
                                    Branch
                                </th>
                            }
                            <th>
                                Officer
                            </th>
                        }
                        <th>
                            Client No
                        </th>
                        <th>
                            File Type
                        </th>
                        <th>
                            File No
                        </th>
                        <th>
                            Status
                        </th>

                        <th>
                            Date Created
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="7"z>No results Found</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                            {
                                if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Officer)
                                </td>
                            }
                            <td>
                                <a href="#" class="MemberLink"
                                   data-id="@item.MemberNo"
                                   data-toggle="tooltip" title="Click for more">
                                    @Html.DisplayFor(modelItem => item.MemberNo)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployerType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td align="left">
                                                <a href="#" class="FileLink"
                                                   data-id="@item.FileNo"
                                                   data-toggle="tooltip" title="Click to view">
                                                    Show
                                                </a>
                                            </td>

                                            @if (ViewBag.FileStatus != "Pending Approval")
                                            {
                                                <td>
                                                    |
                                                </td>
                                                <td align="center">
                                                    <a href="#" class="UpdateLink"
                                                       data-id="@item.FileNo"
                                                       data-toggle="tooltip" title="Click to open">
                                                        Update
                                                    </a>
                                                </td>
                                            }
                                            @if (ViewBag.FileStatus == "Pending Approval" && (ViewBag.Role == "SIO Marketing" || ViewBag.Role == "SIO Operation" || ViewBag.Role == "SIO Branch Operation" || ViewBag.Role == "Admin"))
                                            {
                                                <td>
                                                    |
                                                </td>
                                                <td align="center">
                                                    <a href="#" class="UpdateLink"
                                                       data-id="@item.FileNo"
                                                       data-toggle="tooltip" title="Click to open">
                                                        Update
                                                    </a>
                                                </td>
                                                @*<td align="right">
                                                    <input type="submit" id="approve" value="Approve" class="btn btn-success"/>
                                                </td>*@

                                            }
                                        </tr>
                                    </tbody>
                                </table>                              
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div id='Paging' style="text-align: center">               
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action(@ViewBag.ActionName,
                new { memberNo = ViewBag.MemberNo, page }),
                PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = @ViewBag.PanelId }))
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">
            $(function ()
            {
                //alert("jQuery Executed");
                $.ajaxPrefilter(function (options, original_Options, jqXHR) {
                    options.async = true;
                });
                var $panelId = '@(ViewBag.PanelId)';

                $('#search').unbind().click(function (e) {
                    e.preventDefault();
                    $($panelId).load('@(Url.Action(@ViewBag.ActionName, "MemberFiles",null, Request.Url.Scheme))?memberNo=' + $('#t'+$panelId).val());
                });

                var id = "t" + $panelId;
                document.getElementById(id).onkeyup = function () {
                    //alert("Panel ID: " + id + "  Textbox Val: " + $('#t'+$panelId).val());
                    if ($('#t'+$panelId).val() == 0) {
                        $('.btn').prop('disabled', true);
                    } else {
                        $('.btn').prop('disabled', false);
                    }
                }
            });
    </script>

    <script type="text/javascript">
    $(function () {

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        $('.MemberLink').on('click', function (e) {
            var MemberNum = $(this).attr("data-id");
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("GetMemberInfoByNum"))",
                data: { "MemberNum": MemberNum },
                        success: function (data) {
                            $('#memberDetailsModal').modal();
                            $('#memberDetailsModal').find('.ajax-dynamic-get-data-form').html(data);
                            $('#memberDetailsModal').modal('show');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                });//EndOf Ajax
        })
    });//EndOf Main Func
    </script>
    <script type="text/javascript">
            $(function () {
                $(document).ready(function () {
                    $('[data-toggle="tooltip"]').tooltip();
                });

                $('.FileLink').on('click', function (e) {
                    var FileNo = $(this).attr("data-id");
                    $.ajax({
                        cache: false,
                        type: "GET",
                        url: "@(Url.RouteUrl("GetFileRefsByFileNo"))",
                        data: { "FileNo": FileNo },
                                success: function (data) {
                                    $('#memberFilesModal').modal();
                                    $('#memberFilesModal').find('.ajax-dynamic-get-data-form').html(data);
                                    $('#memberFilesModal').modal('show');
                                },
                                error: function () {
                                    alert('Error. Please try again.');
                                }
                        });//EndOf Ajax
                })
            });//EndOf Main Func
    </script>
    <script type="text/javascript">
            $(function () {
                $(document).ready(function () {
                    $('[data-toggle="tooltip"]').tooltip();
                });

                var fileStatus = '@(ViewBag.FileStatus)';
                var flagger = '@(ViewBag.Flag)';
                var Url = "";
                if (fileStatus == "Pending Approval") { Url = "@(Url.RouteUrl("UploadLoanApproval"))"}
                else if (fileStatus == "Awaiting input") { Url = "@(Url.RouteUrl("UploadPaymentAdvice"))"}
                else if (fileStatus == "Awaiting payment") { Url = "@(Url.RouteUrl("UploadPaymentAndCheque"))"}
                else if (fileStatus == "Awaiting Collateral") { Url = "@(Url.RouteUrl("UploadCollateral"))" }
                //alert("File Status: " + fileStatus + "\n Flag Message: " + flagger);
                alert("File Stats: " + fileStatus + "\nRout URL: " + Url + "\n" + flagger);

                $('.UpdateLink').on('click', function (e) {
                    var FileNo = $(this).attr("data-id");
                    $.ajax({
                        cache: false,
                        type: "GET",
                        url: Url,
                        data: { "FileNo": FileNo },
                        success: function (data) {
                            $('#updateFileModal').modal();
                            $('#updateFileModal').find('.ajax-dynamic-get-data-form').html(data);
                            $('#updateFileModal').modal('show');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });//EndOf Ajax
                })
            });//EndOf Main Func
    </script>
</body>
</html>
