@model PagedList.IPagedList<MFSL.Models.FileReferences>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <section class="content">
        <div class="row">
            <div class="box-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <td align="right">
                                    <input type="number" min="1" id="txtbox3" class="form-control" placeholder="Enter Member #" />
                                </td>
                                <td align="left">
                                    <input type="submit" id="search3" value="search" class="btn btn-success" disabled="disabled" />
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            <div class="col-md-4">
                <h4 class="box-title">Total: @ViewBag.TotalFiles <i class="fa fa-fw fa-folder"></i></h4>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr class="success">
                        @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                        {
                            if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                            {
                                <th>
                                    Branch
                                </th>
                            }
                            <th>
                                Officer
                            </th>
                        }
                        <th>
                            Date Created
                        </th>
                        <th>
                            Client No
                        </th>
                        <th>
                            File No
                        </th>
                        <th>
                            File Type
                        </th>

                        <th>
                            Status
                        </th>
                        <th>
                            Loan Approver
                        </th>

                        <th class="alert-success">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="9">No results Found</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                            {
                                if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                                {
                                    <td class="alert-danger">
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                }
                                <td  class="alert-info">
                                    @Html.DisplayFor(modelItem => item.Officer)
                                </td>
                            }
                            <td class="danger">
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td class="warning">
                                <a href="" class="MemberLink3"
                                   data-id="@item.MemberNo"
                                   data-toggle="modal" title="Click for more">
                                    @Html.DisplayFor(modelItem => item.MemberNo)
                                </a>
                            </td>
                            <td class="warning">
                                @Html.DisplayFor(modelItem => item.FileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployerType)
                            </td>
                            <td class="alert-warning">
                                @Html.DisplayFor(modelItem => item.FileStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Approver)
                            </td>
                            <td class="active">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td align="left">
                                                <a href="" class="FileLink3"
                                                   data-id="@item.FileNo"
                                                   data-toggle="modal" title="Click to view">
                                                    Show
                                                </a>
                                            </td>

                                            @if (ViewBag.Role == "Accounts Payable" || ViewBag.Role == "Accounts Receivable" || ViewBag.Role == "Sr. Finance Officer" || ViewBag.Role == "Admin")
                                            {
                                                <td>
                                                    |
                                                </td>
                                                <td align="center">
                                                    <a href="" class="UpdateLink3"
                                                       data-id="@item.FileNo"
                                                       data-toggle="modal" title="Click to open">
                                                        Update
                                                    </a>
                                                </td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div id='Paging' style="text-align: center">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action(@ViewBag.ActionName,
                new { memberNo = ViewBag.MemberNo, page }),
                PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = @ViewBag.PanelId }))
            </div>
        </div>
    </section>
    <!-- Button trigger modal -->
    <div class="modal" id="memberDetailsModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-user-circle fa-lg" aria-hidden="true"></i> | Member Info</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- File modal -->
    <div class="modal" id="memberFilesModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-files-o fa-lg" aria-hidden="true"></i> | Docs</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update File modal -->
    <div class="modal" id="updateFileModal3" tabindex="-1" role="dialog" aria-labelledby="updateFileModal3" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-fw fa-arrow-circle-o-up fa-lg"></i> | Update file</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
    jQuery('#search3').unbind().click(function (e) {
        e.preventDefault();
        var role = '@(ViewBag.Role)';
        if ($('#txtbox3').val() != null) {
            if (role != "Sr. Finance Officer" && role != "Accounts Payable" && role != "Accounts Receivable") {
                $("#3").load('@(Url.Action("LoadPaymentPanel", "MemberFiles",null, Request.Url.Scheme))?memberNo=' + $('#txtbox3').val());
            }
            else {
                $("#5").load('@(Url.Action("LoadPaymentPanel", "MemberFiles",null, Request.Url.Scheme))?memberNo=' + $('#txtbox3').val());
            }
        }

    });

    var status = '@(ViewBag.Status)';
    if (status == "error") {
        $('#serverAlertModal').modal('show');
    }
    document.getElementById("txtbox3").onkeyup = function () {
        if ($(this).val() == 0) {
            $('.btn').prop('disabled', true);
        } else {
            $('.btn').prop('disabled', false);
        }
    }
    $('.MemberLink3').click(function (e) {
        var MemberNum = $(this).attr("data-id");
        $.ajax({
            async: true,
            cache: false,
            type: "GET",
            url: "@(Url.RouteUrl("GetMemberInfoByNum"))",
            data: { "MemberNum": MemberNum },
            success: function (data) {
                jQuery('#memberDetailsModal3').modal();
                jQuery('#memberDetailsModal3').find('.ajax-dynamic-get-data-form').html(data);
                jQuery('#memberDetailsModal3').modal('show');
            },
            error: function () {
                alert('Error. Please try again.');
            }
        });//EndOf Ajax
    });

    $('.FileLink3').click(function (e) {
        var FileNo = $(this).attr("data-id");
        $.ajax({
            cache: false,
            type: "GET",
            url: "@(Url.RouteUrl("GetFileRefsByFileNo"))",
            data: { "FileNo": FileNo },
            success: function (data) {
                jQuery('#memberFilesModal3').modal();
                jQuery('#memberFilesModal3').find('.ajax-dynamic-get-data-form').html(data);
                jQuery('#memberFilesModal3').modal('show');
            },
            error: function () {
                alert('Error. Please try again.');
            }
        });//EndOf Ajax
    });

    $('.UpdateLink3').click(function (e) {
        var FileNo = $(this).attr("data-id");
        $.ajax({
            cache: false,
            type: "GET",
            url: "@(Url.RouteUrl("UploadPaymentAndCheque"))",
            data: { "FileNo": FileNo },
            success: function (data) {
                jQuery('#updateFileModal3').modal();
                jQuery('#updateFileModal3').find('.ajax-dynamic-get-data-form').html(data);
                jQuery('#updateFileModal3').modal('show');
            },
            error: function () {
                alert('Error. Please try again.');
            }
        });//EndOf Ajax
    });
    </script>
</body>
</html>


