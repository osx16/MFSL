@model PagedList.IPagedList<MFSL.Models.FileReferences>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <!-- Button trigger modal -->
    <div class="modal fade" id="memberDetailsModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-user-circle fa-lg" aria-hidden="true"></i> | Member Info</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- File modal -->
    <div class="modal fade" id="memberFilesModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-files-o fa-lg" aria-hidden="true"></i> | Docs</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update File modal -->
    <div class="modal fade" id="updateFileModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-fw fa-arrow-circle-o-up fa-lg"></i> | Update file</h4>
                </div>
                <div class="modal-body">
                    <div class="ajax-dynamic-get-data-form" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="row">
            @*<div class="box-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <td align="right">
                                    <input type="number" min="1" id="@("t"+ViewBag.PanelId)" class="form-control" placeholder="Enter Member #" />
                                </td>
                                <td align="left">
                                    <input type="submit" id="search" value="search" class="btn btn-success" disabled="disabled" />
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>*@
            <div class="col-md-4">
                <h4 class="box-title">Total: @ViewBag.TotalFiles <i class="fa fa-fw fa-folder"></i></h4>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr class="success">
                        @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                        {
                            if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                            {
                                <th>
                                    Branch
                                </th>
                            }
                            <th>
                                Officer
                            </th>
                        }
                        <th>
                            Client No
                        </th>
                        <th>
                            File Type
                        </th>
                        <th>
                            File No
                        </th>
                        <th>
                            Status
                        </th>

                        <th>
                            Date Created
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="7">No results Found</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (ViewBag.Role != "Investment Officer" && ViewBag.Role != "Intern")
                            {
                                if (ViewBag.Role != "SIO Operation" && ViewBag.Role != "SIO Marketing")
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Officer)
                                </td>
                            }
                            <td>
                                <a href="#" class="MemberLink2"
                                   data-id="@item.MemberNo"
                                   data-toggle="tooltip" title="Click for more">
                                    @Html.DisplayFor(modelItem => item.MemberNo)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployerType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td align="left">
                                                <a href="#" class="FileLink2"
                                                   data-id="@item.FileNo"
                                                   data-toggle="tooltip" title="Click to view">
                                                    Show
                                                </a>
                                            </td>

                                            @if (ViewBag.FileStatus != "Pending Approval")
                                            {
                                                <td>
                                                    |
                                                </td>
                                                <td align="center">
                                                    <a href="#" class="UpdateLink2"
                                                       data-id="@item.FileNo"
                                                       data-toggle="tooltip" title="Click to open">
                                                        Update
                                                    </a>
                                                </td>
                                            }
                                            @if (ViewBag.FileStatus == "Pending Approval" && (ViewBag.Role == "SIO Marketing" || ViewBag.Role == "SIO Operation" || ViewBag.Role == "SIO Branch Operation" || ViewBag.Role == "Admin"))
                                            {
                                                <td>
                                                    |
                                                </td>
                                                <td align="center">
                                                    <a href="#" class="UpdateLink2"
                                                       data-id="@item.FileNo"
                                                       data-toggle="tooltip" title="Click to open">
                                                        Update
                                                    </a>
                                                </td>
                                                @*<td align="right">
                                                        <input type="submit" id="approve" value="Approve" class="btn btn-success"/>
                                                    </td>*@

                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div id='Paging' style="text-align: center">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action(@ViewBag.ActionName,
                new { memberNo = ViewBag.MemberNo, page }),
                PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = @ViewBag.PanelId }))
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {

            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
                $('.MemberLink2').on('click', function (e) {
                    var MemberNum = $(this).attr("data-id");
                    $.ajax({
                        cache: false,
                        type: "GET",
                        url: "@(Url.RouteUrl("GetMemberInfoByNum"))",
                        data: { "MemberNum": MemberNum },
                        success: function (data) {
                            $('#memberDetailsModal2').modal();
                            $('#memberDetailsModal2').find('.ajax-dynamic-get-data-form').html(data);
                            $('#memberDetailsModal2').modal('show');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });//EndOf Ajax
                });

                $('.FileLink2').on('click', function (e) {
                    var FileNo = $(this).attr("data-id");
                    $.ajax({
                        cache: false,
                        type: "GET",
                        url: "@(Url.RouteUrl("GetFileRefsByFileNo"))",
                        data: { "FileNo": FileNo },
                        success: function (data) {
                            $('#memberFilesModal2').modal();
                            $('#memberFilesModal2').find('.ajax-dynamic-get-data-form').html(data);
                            $('#memberFilesModal2').modal('show');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });//EndOf Ajax
                });

                $('.UpdateLink2').on('click', function (e) {
                    var FileNo = $(this).attr("data-id");
                    $.ajax({
                        cache: false,
                        type: "GET",
                        url: "@(Url.RouteUrl("UploadPaymentAdvice"))",
                        data: { "FileNo": FileNo },
                        success: function (data) {
                            $('#updateFileModal2').modal();
                            $('#updateFileModal2').find('.ajax-dynamic-get-data-form').html(data);
                            $('#updateFileModal2').modal('show');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });//EndOf Ajax
                });

            });//EndOf document.ready
        });//EndOf Main Func
    </script>
</body>
</html>

